{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake release",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "command": "mkdir release && cd release && cmake -DCMAKE_BUILD_TYPE=Release .."
        },
        {
            "label": "cmake debug",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "command": "mkdir debug && cd debug && cmake -DCMAKE_BUILD_TYPE=Debug .."
        },
        {
            "label": "everythingTest release",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "command": "cd release && make everythingTest && test/everythingTest",
            "problemMatcher": "$gcc"
        },
        {
            "label": "make debug",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "command": "while true; do make; done",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^/mnt/c/Users/richie/Documents/github/k-means/(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "options": {
                "cwd": "C:/Users/richie/Documents/github/k-means/debug"
            }
        },
        {
            "label": "directoryIterate test",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "command": "cd release && make directoryIteratorTest && test/directoryIteratorTest",
        },
        {
            "label": "kmeansTest release",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "command": "cd release && make kmeansTest && test/kmeansTest",
        }
    ]
}